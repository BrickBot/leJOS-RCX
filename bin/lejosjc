#!/bin/bash

#
# lejosjc: Java tool for compiling java programs for LeJOS
#
# 12/12/02  created L. Griffiths

if [ $OSTYPE == "cygwin" ]; then
  SEP=";"
else
  SEP=":"
fi

if [ -z "$LEJOS_HOME" ]; then
  LEJOS_HOME="$(dirname $0)/.."
fi

javac -target 1.1 -source 1.2 -bootclasspath "$LEJOS_HOME/lib/classes.jar$SEP$LEJOS_HOME/lib/rcxrcxcomm.jar$SEP$CLASSPATH" "$@"

