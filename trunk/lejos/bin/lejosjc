#!/bin/bash

#
# lejosjc: Java tool for compiling java programs for LeJOS
#
# 12/12/02  created L. Griffiths

if [ $OSTYPE == "cygwin" ]; then
  SEPARATOR=";"
else
  SEPARATOR=":"
fi

if [ -z "$LEJOS_HOME" ]; then
  echo LEJOS_HOME not defined
else
  javac -target 1.1 -source 1.2 -bootclasspath "$LEJOS_HOME/lib/classes.jar$SEPARATOR$LEJOS_HOME/lib/rcxrcxcomm.jar$SEPARATOR$CLASSPATH" $*
fi

